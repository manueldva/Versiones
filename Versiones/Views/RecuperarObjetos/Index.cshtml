@model IEnumerable<Versiones.Models.RecuperarObjeto>

<!DOCTYPE html>
<html>
<head>
    <style>
        body {
            font-family: Arial, sans-serif;
        }
        h1 {
            color: #333;
        }
        table {
            width: 100%;
            border-collapse: collapse;
        }
        th, td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }
        tr:nth-child(even) {
            background-color: #f2f2f2;
        }
    </style>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
</head>
<body>
    <h1>RecuperarObjetos</h1>

    <!-- Agrega este formulario -->
    <form method="get">
        <select name="TipoID">
            <!-- Aquí puedes generar las opciones del select con los datos del procedimiento almacenado -->
            @foreach (var tipoObjeto in (List<Versiones.Models.TipoObjeto>)ViewData["TiposObjeto"])
            {
                <option value="@tipoObjeto.TipoID">@tipoObjeto.Tipo</option>
            }
        </select>
       
    </form>

    <!-- Muestra el listado de RecuperarObjetos -->
    <table>
        <tr>
            <th>ID</th>
            <th>TABLE_SCHEMA</th>
            <th>TABLE_NAME</th>
        </tr>
        @foreach (var objeto in Model)
        {
            <tr>
                <td>@objeto.ID</td>
                <td>@objeto.TABLE_SCHEMA</td>
                <td>@objeto.TABLE_NAME</td>
            </tr>
        }
    </table>
</body>


<script>
    $(document).ready(function () {
        $('select[name="TipoID"]').change(function () {
            this.form.submit();
        });
    });
</script>
</html>

